<h1 class="login-header">USER LOGIN</h1>

<form class="login-form" action="/api/session/login" method="post">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required />

    <label for="password">Password</label>
    <input type="password" id="password" name="password" required />
    <br>
    <button type="submit">Login</button>
    <br>
    <br>
    <button type="button"><a href="/api/session/github">Login with GitHub</a></button>

    <button type="button"><a href="/restore-password">Restore my Password</a></button>
    <button type="button"><a href="/forgot-password">Forgot my Password</a></button>
</form>

<form action="/register" method="get">
    <button class="register-button" type="submit">OR REGISTER</button>
</form>